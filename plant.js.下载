	/*成绩分析报告页面---------------------*/
	/*成绩分析难度（难度比例，信度，区分度）说明隐藏层显示*/
	$('.p-num-inst .helps').on({
			'mouseover':function(){
					$(this).siblings('div.ptips').show();	
			},
			'mouseleave':function(){
					$(this).siblings('div.ptips').hide();	
			}		
	});
	
	/*点击查看缺考学生*/
	$('.paper-tips .see-none').on('click',function(){
