	$('.show-stnr').on('click',function(){
		
		if($(this).text()=='点击显示更多')
		{
			$(this).text('收起');	
			$(this).siblings('.exercise').removeClass('hidden');
		}
		else
		{
			$(this).text('点击显示更多');	
			$(this).siblings('.exercise').addClass('hidden');
