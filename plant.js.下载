
$(function(){
	/*顶部导航*/
	//$('.tnav li').on('click',function(){
		//$(this).children().addClass('selected');
		//$(this).siblings().children().removeClass('selected');
	//});
	
	/*顶部右侧个人信息下拉框*/
   $('#showTopmenu').on({
	   			"mouseover":function(){
					    $('span.top-arrow').addClass('down');
						$('.top-menulist').show();	
						}, 
				"mouseout":function(){
							$('.top-menulist').hide();
							$('span.top-arrow').removeClass('down');
				}	
	   });
	
	/*学生－考试列表页面*/
	$('#testList tr,#stTestList tr').hover(
		function(){
			$(this).children().addClass('on');
		},
		function(){
			$(this).children().removeClass('on');
		})
	
	/*学生－分类错题本页面----------------------------------*/
	<!--搜索区输入框样式的变化--共用-->
	$('#seachPane .sbox').on('click',function(){
		if($(this).hasClass('on'))
		{	
			$(this).removeClass('on');
			$(this).children('div').hide();
		}
		else
		{	
			$(this).addClass('on').siblings('.sbox').removeClass('on').children('div').hide();
			$(this).children('div').show();
		}	
		
	});
	
	/*选择科目－考试项目*/
	$('#chooseKm .subject-list,#chooseKsxm .test-list').on('click','span',function(){
		var atext = $(this).text();
		$(this).parent().siblings('input').val(atext);
	});
	
	$('#choseAll').on('click',function(){
		var anum=$('#totalT').text();
		if($(this).hasClass('on'))
		{
			$(this).removeClass('on');
			$('#aChose').text('0');	
			$('#showTpane').find('.add-opt').removeClass('export-opt').text('加入队列');
		}
		else
		{
			$(this).addClass('on');	
			$('#aChose').text(anum);
			$('#showTpane').find('.add-opt').addClass('export-opt').text('移出队列');
		}
	});
	
	$('#showTpane').find('.add-opt').on('click',function(){
		if($(this).hasClass('export-opt'))	
		{
			$(this).removeClass('export-opt').text('加入队列');
		}
		else
			$(this).addClass('export-opt').text('移出队列');
	});
	
	
	/*学生成绩单*/
	/*左侧导航*/
	$('#mainNavbox li').on('click',function(){
//		var a=$(this).index();
//		$(this).addClass('on').siblings('li').removeClass('on');
//		if(a==0)
//		{
//			$(this).next('#subTbox').show();
//			$('#conBar').hide();
//			
//		}
//		else if	(a==2)
//		{
//			$(this).next('#conBar').show();
//			$('#subTbox').hide();
//		}
	});
	
	$('#subTbox').on('click','a',function(){
		$(this).addClass('on').siblings().removeClass('on');	
	});
	
	/*成绩单隔行灰色背景*/
	$('#stScoreTab tr:even').each(function(index, element) {
        $(this).children('td').css('background','#f9f9f9');
		
    });
	
	/*点击滑块返回顶端开始*/
	$('#goTop').on('click',function(){
		$(window).scrollTop('0');
	});
	
	/*点击滑块返回顶端end*/
	/*随堂清页面---------------------*/
	/*点击“详细”*/
	$('#STestWrap').on('click','.st-detail',function(){
		$('#StqInfor').show();
	});
	$('#StqInfor .pop-close,#StqInfor .know-btn').on('click',function(){
		$('#StqInfor').hide();
		});
	
	
	
	/*评价查看页面---------------------*/
	/*选择时间--学科*/
	$('#chooseTime .time-list,#chooseKmT .subject-list').on('click','span',function(){
		var atxt=$(this).text();
		$(this).parent().siblings('input').val(atxt);	
	});
	
	/*点击查看更多*/
	$('#seeMore').on('click',function(){
		if($(this).text()=='点击查看更多')
		{
			$(this).text('收起');	
			$(this).parent('.coment-box').css('height','auto');
		}
		else
		{
			$(this).text('点击查看更多');	
			$(this).parent('.coment-box').css('height','265px');
		}
	});
	
	/*教师－班级学生信息页面--------------------------------------*/
	/*选择年级*/
	$('#chooseGrade .grade-list').on('click','span',function(){
		var atxt=$(this).text();
		$(this).addClass('on').siblings().removeClass('on');
		$(this).parent().siblings('.txt02').val(atxt);
		$(this).parent().siblings('.txt02').attr("newgradeid",$(this).attr("id"));
		 getClass("classselect","newclassid",$("#newgradeid").attr("newgradeid"));
		
	});
		
	/*选择班级*/
	$('#chooseClass .subject-list').on('click','span',function(){
		var atxt=$(this).text();
		$(this).addClass('on').siblings().removeClass('on');
		$(this).parent().siblings('.txt01').val(atxt);
		$(this).parent().siblings('.txt01').attr("newclassid",$(this).attr("id"))
		
		
	});
		
	/*学生详细信息页面--------------------------------*/	
	$('#sTestList tr').on('click','.details',function(){
		var aobj=$(this).parent().parent().next().children().children('.sts-score');
		if($(aobj).css('display')=='none')
		{	
			$(this).text('收起').addClass('on');
			$(aobj).show();
		}
		else
		{
			$(this).text('展开').removeClass('on');
			$(aobj).hide();
		}
	});
	
	/*学生历次考试趋势图弹窗*/
	$('#sTestList tr').on('click','.s-xspic.s-zf',function(){
		$('#tendcyChart').show();
	});
	
	$('#tendcyChart .pop-close,#tendcyChart .know-btn').on('click',function(){
			$('#tendcyChart').hide();
	});
	
	
	
	
	/*班级成绩简表-----------------------------*/
	/*选择考试项目*/
	$('#chooseTPt .test-list,#chooseTPt_1 .test-list').on('click','span',function(){
		var atxt=$(this).text();
		$(this).addClass('on').siblings().removeClass('on');
		$(this).parent().siblings('.txt02').val(atxt);
		
	});
	
	/*选择科目*/	
	$('#TchooseKm .subject-list').on('click','span',function(){
		var atext = $(this).text();
		$(this).parent().siblings('input').val(atext);
	});	
	
	/*选择是否显示单科名次*/
	$('.chose-dk').on('click',function(){
		if($(this).hasClass('on'))
			$(this).removeClass('on');
		else
			$(this).addClass('on');
	});
	
	$('#bjPane').on('click','.pop-chart',function(){
		$('#tendcyChart').show();
	});
	
	
	/*班级试题分析页面-错题名单弹窗*/
	$('.table').on('click','span.name-list',function(){
