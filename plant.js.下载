	$('#erorSName .pop-close,#erorSName .know-btn').on('click',function(){
			$('#erorSName').hide();
	});
	
	/*小题分析折叠展开*/
	$('#showBjxt').on('click',function(){
		if($(this).hasClass('on'))
		{
			$(this).text('展开').removeClass('on');
			$(this).siblings('.bjxt-box').css('height','454px');
		}
		else
		{
			$(this).text('收起').addClass('on');
			$(this).siblings('.bjxt-box').css('height','auto');
		}
	});
	
	/*班级成绩分析页面-主观题得分名单弹窗*/
	$('.table').on('click','span.zgt-name-list',function(){
