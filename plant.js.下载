		 $('#showLXR').show();
	});
	$('#showLXR .know-btn,#showLXR a.pop-close').on('click',function(){
		$('#showLXR').hide();
	});
	
	
	/*选择考试类型*/
	$('#chosePaperType').on('click',function(){
		if($(this).children('.tk-subject-box').css('display')=='none')
			$(this).children('.tk-subject-box').show();
		else
			$(this).children('.tk-subject-box').hide();
	});
	$('#chosePaperType .tk-subject-box dl').on('click','dd',function(){
		var atext=$(this).text();
		$(this).addClass('on').siblings().removeClass('on');
		$(this).parent().parent().siblings('.txt01').val(atext);
	});
	
	
	/*点击“查看发送成绩”*/
	$('.s-cjmsg').on('click','.s-msg-cj',function(){
