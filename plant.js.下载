	$('#pointStsList .pop-close,#pointStsList .know-btn').on('click',function(){
			$('#pointStsList').hide();
	});
	
	/*科目分层教学------------------------------------*/
	
	/*类型选择*/
	$('#TchoseType .subject-list span').on('click',function(){
			var atxt=$(this).text();
			$(this).parent().siblings('.txt01').val(atxt);
			if($(this).index()=='0')
			{
				$(this).parent().parent().siblings('.fc-wrap').children().children('var').hide();
			}
			else
			{
				$(this).parent().parent().siblings('.fc-wrap').children().children('var').show();
			}
	});
	
	
	
	/*科目对应教学-----------------------------------------------------*/
	/*点击“全选”*/
	$('#subjectTeach .chose-all').on('click',function(){
		if($(this).hasClass('on'))
		{
			$(this).removeClass('on');
			$('#subjectTeach .cbox-icon').removeClass('on');
		}
		else
		{
			$(this).addClass('on');
			$('#subjectTeach .cbox-icon').addClass('on');
		}
	});
	
	/*点击某一个复选框*/
	$('#subjectTeach').on('click','.cbox-icon',function(){
		if($(this).hasClass('on'))
		{
			$(this).removeClass('on');
			$('#subjectTeach .chose-all').removeClass('on');
		}
		else
		{
			$(this).addClass('on');
			if($('#subjectTeach .cbox-icon').length==$('#subjectTeach .cbox-icon.on').length)
				$('#subjectTeach .chose-all').addClass('on');
		}
	});
	
	/*临界生页面------------------------------------*/
	
	/*点击一个班级*/
	$('#TshowClass').on('click','.bj-box',function(){
		if($(this).hasClass('on'))
		{
			$(this).removeClass('on');
			$('#TshowClass .chose-all').removeClass('on');
		}
		else
		{
			$(this).addClass('on');
			if($('#TshowClass .bj-box.on').length==$('#TshowClass .bj-box').length)
				$('#TshowClass .chose-all').addClass('on');
		}
	});
	
	
	/*点击“全部班级”*/
	$('#TshowClass .chose-all').on('click',function(){
		if($(this).hasClass('on'))
		{
			$(this).removeClass('on');
			$(this).siblings('.bj-box').removeClass('on');
		}
		else
		{
			$(this).addClass('on');
			$(this).siblings('.bj-box').addClass('on');
		}
	});
	
	/*班级列表展开收起*/
	$('#TshowClass .show-m').on('click',function(){
		if($(this).hasClass('on'))
		{
			$(this).removeClass('on').text('展开');
			$(this).siblings('.class-wrap').css('height','35px');
		}
		else
		{
			$(this).addClass('on').text('收起');
			$(this).siblings('.class-wrap').css('height','auto');
		}
	});
	
	
	/*点击显示更多*/
	$('.tab-wrap .show-more').on('click',function(){
		var aa=$(this).text();
		if(aa=='点击显示更多')
		{
			$(this).text('收起');
			$(this).siblings('.seem-box').css('height','auto');
		}
		else
		{
			$(this).text('点击显示更多');
			$(this).siblings('.seem-box').css('height','294px');
		}
	});
	
	/*配置试题库*/
	$('#TsettingTK').on('click','.th-wrap',function(){
		if($(this).hasClass('on'))
			$(this).removeClass('on');
		else
			$(this).addClass('on');
	});
	
	$('#TsettingTK').on('click','.th-box span', function(){
		 var atxt=$(this).text();
		 $(this).parent().siblings('.txt01').val(atxt);
	});
	
	/*点击“添加”*/
	$('#TsettingTK').on('click','.add-th.opt',function(){
		 var a=$(this).siblings('.bdth-wrap').children('.th-wrap').length;
		 $(this).siblings('.bdth-wrap').append('<div class="th-wrap">'+
								'<input type="text" class="txt01" readonly /><span class="arrow-1"></span>'+
								'<div class="th-box">'+
									'<span>1</span><span>2</span><span>1-1</span><span>2-1</span><span>3-1</span>'+
								'</div>'+
							'</div>');	
		 $(this).siblings('.del-th').addClass('opt');
		 if(a==2)
			$(this).removeClass('opt');
			
		
	});
	
	/*点击“删除”*/
	$('#TsettingTK').on('click','.del-th.opt',function(){
		var a=$(this).siblings('.bdth-wrap').children('.th-wrap').length;
		$(this).siblings('.bdth-wrap').children('.th-wrap:last').remove();
		$(this).siblings('.add-th').addClass('opt');	
		if(a==2)
			$(this).removeClass('opt');
	});
	
	/*教务主任－－考试项目管理*/
	/*点击“配置图片“*/
	$('#creatPaperTab').on('click','.design-pic',function(){
		$('#setingPicSite').show();
