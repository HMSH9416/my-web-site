	/*左侧导航*/
	$('#mainNavbox').on('click','dl.nav-wrap',function(){
			$(this).addClass('on').siblings().removeClass('on');
	});
	
	/*选择班级*/
	$('#chooseSts .name-box').on('click','span',function(){
		var atxt=$(this).text();
		$(this).addClass('on').siblings().removeClass('on');
		$(this).parent().siblings('.txt01').val(atxt);
		
	});
	/*前X名分布----------------------------------*/
	
	$('#xDistribute').on('click','.show-more',function(){
		if($(this).text()=='点击显示更多')
		{
			$(this).text('收起');
			$(this).siblings().css('height','auto');
		}
		else
		{
			$(this).text('点击显示更多');
			$(this).siblings().css('height','294px');
		}
		
	});
	
	/*知识点分析页面-----------------------------------*/
	
	$('#KnowPoint').on('click','.score-inf',function(){
			$('#pointStsList').show();
