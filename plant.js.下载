	});

	/*校长考试列表页面*/////////////////////////////////////////////////////////
	/*选择年级\选择考试类型*/
	$('#choseGrade,#choseKsType').on('click',function(){
		
		if($(this).children('.subject-list').css('display')=='block')
		{
			
			$(this).children('.subject-list').hide();
		}
		else
		{
				
			$(this).children('.subject-list').show();
		}
	
	});
	
	
	$('#choseGrade .subject-list').on('click','span',function(){
		var atext = $(this).text();
		$(this).parent().siblings('input').val(atext);
		$(this).parent().siblings('input').attr("newgradeid",$(this).attr("id"));
	});
	$('#choseKsType .subject-list').on('click','span',function(){
		var atext = $(this).text();
		$(this).parent().siblings('input').val(atext);
		$(this).parent().siblings('input').attr("newexamtype",$(this).attr("id"));
