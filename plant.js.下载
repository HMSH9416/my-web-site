		$('#editBehavior').hide();
	});
	
	$('.studts-pane.pj-sts').on('click','li',function(){
		var aname=$(this).children('.s-name').text();
		$('#showStBehavior').show();
		$('#showStBehavior .top .s-name').text(aname);
	})
	$('#showStBehavior .know-btn,#showStBehavior a.pop-close').on('click',function(){
